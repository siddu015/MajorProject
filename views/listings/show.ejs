<% layout("/layouts/boilerplate") %>
<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-10 text-center">
            <h3 class="mb-4">Listing Details</h3>
        </div>

        <div class="col-md-6 col-lg-6">
            <div class="card shadow-sm">
                <img
                        src="<%= listing.image %>"
                        class="card-img-top rounded-top"
                        alt="listing_image"
                        style="max-height: 320px; object-fit: cover;"
                />
                <div class="card-body">
                    <h5 class="card-title font-weight-bold"><%= listing.title %></h5>
                    <p class="card-text text-muted mb-2"><%= listing.description %></p>
                    <hr>
                    <p class="card-text mb-1">
                        <strong>Price:</strong> &#8377;<%= listing.price.toLocaleString("en-IN") %>
                    </p>
                    <p class="card-text mb-1">
                        <strong>Location:</strong> <%= listing.location %>, <%= listing.country %>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-12 text-center mt-2 mb-2">
            <a
                    href="/listings/<%= listing._id %>/edit"
                    class="btn btn-outline-primary mr-3 px-4"
            >Edit</a>
            <form
                    method="POST"
                    action="/listings/<%= listing._id %>?_method=DELETE"
                    class="d-inline"
            >
                <button class="btn btn-outline-danger px-4">Delete</button>
            </form>
        </div>
    </div>
</div>