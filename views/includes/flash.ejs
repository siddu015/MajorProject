<% if (success && success.length) { %>
    <div class="custom-alert col-6 offset-3" role="alert">
        <span class="message"><%= success %></span>
        <button type="button" class="close-btn" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>

    <style>
        .custom-alert {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 20px;
            border-radius: 8px;
            background: linear-gradient(135deg, #2e6018, rgba(144, 200, 68, 0.68));
            color: white;
            font-size: 1rem;
            font-weight: 500;
            position: relative;
            margin-bottom: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            opacity: 1;
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        .custom-alert .message {
            flex: 1;
        }

        .custom-alert .close-btn {
            background: transparent;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: white;
            transition: transform 0.2s ease;
        }

        .custom-alert .close-btn:hover {
            transform: scale(1.2);
        }
    </style>

    <script>
        document.querySelector('.close-btn').addEventListener('click', function () {
            const alertBox = this.parentElement;
            alertBox.style.opacity = '0'; // Smooth fade-out
            setTimeout(() => alertBox.style.display = 'none', 300); // Hide after animation
        });
    </script>
<% } %>

